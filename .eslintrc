{
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["@babel", "prettier"],
  "ignorePatterns": ["node_modules/", "dist/", "public/"],
  "rules": {
    "semi": [2, "never"],
    "prettier/prettier": "error",
    "no-underscore-dangle": "off"
  }
}
